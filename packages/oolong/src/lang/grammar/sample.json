{
    "type": {
        "password": {
            "type": "text",
            "maxLength": 200
        },
        "email": {
            "type": "text",
            "maxLength": 200,
            "modifiers": [
                {
                    "oolType": "Validator",
                    "name": "isEmail"
                }
            ]
        },
        "phone": {
            "type": "text",
            "maxLength": 20,
            "modifiers": [
                {
                    "oolType": "Validator",
                    "name": "matches",
                    "args": "/^((\\+|00)\\d+)?\\d+(-\\d+)?$/"
                }
            ]
        },
        "userStatus": {
            "type": "enum",
            "values": [
                "inactive",
                "active",
                "disabled",
                "forbidden",
                "deleted"
            ]
        },
        "name": {
            "type": "text",
            "maxLength": 20
        }
    },
    "entity": {
        "user": {
            "comment": "User Credential",
            "features": [
                {
                    "name": "autoId",
                    "args": {
                        "startFrom": 100000
                    }
                },
                "createTimestamp",
                "updateTimestamp",
                {
                    "name": "logicalDeletion",
                    "args": {
                        "status": "deleted"
                    }
                },
                {
                    "name": "stateTracking",
                    "args": "status"
                },
                {
                    "name": "atLeastOneNotNull",
                    "args": [
                        "email",
                        "mobile"
                    ]
                }
            ],
            "fields": {
                "email": {
                    "name": "email",
                    "type": "email"
                },
                "mobile": {
                    "name": "mobile",
                    "type": "phone",
                    "modifiers": [
                        {
                            "oolType": "Validator",
                            "name": "isMobilePhone",
                            "args": {
                                "oolType": "PipedValue",
                                "value": {
                                    "oolType": "ObjectReference",
                                    "name": "latest.locale"
                                },
                                "modifiers": [
                                    {
                                        "oolType": "Processor",
                                        "name": "stringDasherize"
                                    }
                                ]
                            }
                        },
                        {
                            "oolType": "Processor",
                            "name": "normalizeMobile"
                        }
                    ]
                },
                "status": {
                    "name": "status",
                    "type": "userStatus",
                    "default": "inactive"
                },
                "profile": {
                    "name": "profile",
                    "association": {
                        "type": "hasOne",
                        "target": "personalProfile"
                    }
                },
                "securityGroups": {
                    "name": "securityGroups",
                    "association": {
                        "type": "hasMany",
                        "target": "securityGroup"
                    }
                }
            },
            "indexes": [
                {
                    "fields": "email",
                    "unique": true
                },
                {
                    "fields": "mobile",
                    "unique": true
                }
            ]
        },
        "personalProfile": {
            "base": "profile",
            "comment": "Personal Profile",
            "features": [
                "updateTimestamp"
            ],
            "fields": {
                "owner": {
                    "name": "owner",
                    "association": {
                        "type": "belongsTo",
                        "target": "user"
                    }
                },
                "firstName": {
                    "name": "firstName",
                    "type": "name",
                    "optional": true
                },
                "middleName": {
                    "name": "middleName",
                    "type": "name",
                    "optional": true
                },
                "surName": {
                    "name": "surName",
                    "type": "name",
                    "optional": true
                },
                "gender": {
                    "name": "gender",
                    "association": {
                        "type": "hasOne",
                        "target": "gender"
                    },
                    "optional": true
                },
                "title": {
                    "name": "title",
                    "association": {
                        "type": "hasOne",
                        "target": "personTitle"
                    },
                    "optional": true
                },
                "dateOfBirth": {
                    "name": "dateOfBirth",
                    "type": "datetime",
                    "optional": true
                }
            },
            "key": "owner"
        },
        "gender": {
            "base": "dictionary",
            "data": {
                "M": {
                    "name": "male"
                },
                "F": {
                    "name": "female"
                },
                "U": {
                    "name": "unknown"
                }
            }
        },
        "personTitle": {
            "base": "dictionary",
            "fields": {
                "maleCapable": {
                    "name": "maleCapable",
                    "type": "bool",
                    "default": true
                },
                "femaleCapable": {
                    "name": "femaleCapable",
                    "type": "bool",
                    "default": true
                }
            },
            "data": {
                "MR": {
                    "name": "Mr",
                    "femaleCapable": false
                },
                "MRS": {
                    "name": "Mrs",
                    "maleCapable": false
                },
                "MS": {
                    "name": "Ms",
                    "maleCapable": false
                },
                "MISS": {
                    "name": "Miss",
                    "maleCapable": false
                },
                "DR": {
                    "name": "Dr"
                }
            }
        }
    }
}