{
    "constant": {
        "normalLength": 200
    },
    "type": {
        "password": {
            "type": "text",
            "maxLength": {
                "oolType": "ConstReference",
                "name": "normalLength"
            }
        },
        "email": {
            "type": "text",
            "maxLength": {
                "oolType": "ConstReference",
                "name": "normalLength"
            },
            "modifiers": [
                {
                    "oolType": "Validator",
                    "name": "isEmail"
                }
            ]
        },
        "phone": {
            "type": "text",
            "maxLength": 20,
            "modifiers": [
                {
                    "oolType": "Validator",
                    "name": "matches",
                    "args": "/^((\\+|00)\\d+)?\\d+(-\\d+)?$/"
                },
                {
                    "oolType": "Processor",
                    "name": "normalizeMobile"
                }
            ]
        }
    }
}