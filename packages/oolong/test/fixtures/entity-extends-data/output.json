{
    "type": {
        "password": {
            "type": "text",
            "maxLength": [
                200
            ]
        },
        "email": {
            "type": "text",
            "maxLength": [
                200
            ],
            "modifiers": [
                {
                    "oolType": "Validator",
                    "name": "isEmail"
                }
            ]
        },
        "phone": {
            "type": "text",
            "maxLength": [
                20
            ],
            "modifiers": [
                {
                    "oolType": "Validator",
                    "name": "matches",
                    "args": [
                        "/^((\\+|00)\\d+)?\\d+(-\\d+)?$/"
                    ]
                }
            ]
        },
        "userStatus": {
            "type": "enum",
            "values": [
                [
                    "inactive",
                    "active",
                    "disabled",
                    "forbidden",
                    "deleted"
                ]
            ]
        },
        "name": {
            "type": "text",
            "maxLength": [
                20
            ]
        }
    },
    "entity": {
        "user": {
            "comment": "User Credential",
            "features": [
                {
                    "name": "autoId",
                    "args": [
                        {
                            "startFrom": 100000
                        }
                    ]
                },
                "createTimestamp",
                "updateTimestamp",
                {
                    "name": "logicalDeletion",
                    "args": [
                        {
                            "status": "deleted"
                        }
                    ]
                },
                {
                    "name": "stateTracking",
                    "args": [
                        "status"
                    ]
                },
                {
                    "name": "atLeastOneNotNull",
                    "args": [
                        [
                            "email",
                            "mobile"
                        ]
                    ]
                }
            ],
            "fields": {
                "email": {
                    "name": "email",
                    "type": "email"
                },
                "mobile": {
                    "name": "mobile",
                    "type": "phone",
                    "modifiers": [
                        {
                            "oolType": "Validator",
                            "name": "isMobilePhone",
                            "args": [
                                {
                                    "oolType": "PipedValue",
                                    "value": {
                                        "oolType": "ObjectReference",
                                        "name": "latest.locale"
                                    },
                                    "modifiers": [
                                        {
                                            "oolType": "Processor",
                                            "name": "stringDasherize"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "oolType": "Processor",
                            "name": "normalizeMobile"
                        }
                    ]
                },
                "status": {
                    "name": "status",
                    "type": "userStatus",
                    "default": [
                        "inactive"
                    ]
                },
                "password": {
                    "name": "password",
                    "type": "password",
                    "modifiers": [
                        {
                            "oolType": "Processor",
                            "name": "hashPassword",
                            "args": [
                                {
                                    "oolType": "ObjectReference",
                                    "name": "latest.passwordSalt"
                                }
                            ]
                        }
                    ]
                },
                "passwordSalt": {
                    "name": "passwordSalt",
                    "type": "text",
                    "fixedLength": [
                        8
                    ],
                    "auto": true
                }
            },
            "associations": [
                {
                    "type": "hasMany",
                    "destEntity": "personalProfile"
                },
                {
                    "type": "hasMany",
                    "destEntity": "securityGroup"
                }
            ],
            "indexes": [
                {
                    "fields": "email",
                    "unique": true
                },
                {
                    "fields": "mobile",
                    "unique": true
                }
            ]
        },
        "personalProfile": {
            "base": "profile",
            "comment": "Personal Profile",
            "features": [
                "updateTimestamp"
            ],
            "fields": {
                "firstName": {
                    "name": "firstName",
                    "type": "name",
                    "optional": true
                },
                "middleName": {
                    "name": "middleName",
                    "type": "name",
                    "optional": true
                },
                "surName": {
                    "name": "surName",
                    "type": "name",
                    "optional": true
                },
                "dateOfBirth": {
                    "name": "dateOfBirth",
                    "type": "datetime",
                    "optional": true
                }
            },
            "key": "owner",
            "associations": [
                {
                    "type": "belongsTo",
                    "destEntity": "user",
                    "srcField": "owner"
                },
                {
                    "type": "refersTo",
                    "destEntity": "gender"
                },
                {
                    "type": "refersTo",
                    "destEntity": "personTitle"
                }
            ]
        },
        "gender": {
            "base": "dictionary",
            "data": {
                "M": {
                    "name": "male"
                },
                "F": {
                    "name": "female"
                },
                "U": {
                    "name": "unknown"
                }
            }
        },
        "personTitle": {
            "base": "dictionary",
            "fields": {
                "maleCapable": {
                    "name": "maleCapable",
                    "type": "bool",
                    "default": [
                        true
                    ]
                },
                "femaleCapable": {
                    "name": "femaleCapable",
                    "type": "bool",
                    "default": [
                        true
                    ]
                }
            },
            "data": {
                "MR": {
                    "name": "Mr",
                    "femaleCapable": false
                },
                "MRS": {
                    "name": "Mrs",
                    "maleCapable": false
                },
                "MS": {
                    "name": "Ms",
                    "maleCapable": false
                },
                "MISS": {
                    "name": "Miss",
                    "maleCapable": false
                },
                "DR": {
                    "name": "Dr"
                }
            }
        }
    }
}