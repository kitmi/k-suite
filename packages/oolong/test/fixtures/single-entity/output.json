{
    "type": {
        "password": {
            "type": "text",
            "maxLength": 200
        },
        "email": {
            "type": "text",
            "maxLength": 200,
            "modifiers": [
                {
                    "oolType": "Validator",
                    "name": "isEmail"
                }
            ]
        },
        "phone": {
            "type": "text",
            "maxLength": 20,
            "modifiers": [
                {
                    "oolType": "Validator",
                    "name": "matches",
                    "args": "/^((\\+|00)\\d+)?\\d+(-\\d+)?$/"
                }
            ]
        },
        "userStatus": {
            "type": "enum",
            "values": [
                "inactive",
                "active",
                "disabled",
                "forbidden",
                "deleted"
            ]
        }
    },
    "entity": {
        "user": {
            "comment": "User Credential",
            "features": [
                {
                    "name": "autoId",
                    "args": {
                        "startFrom": 100000
                    }
                },
                "createTimestamp",
                "updateTimestamp",
                {
                    "name": "logicalDeletion",
                    "args": {
                        "status": "deleted"
                    }
                },
                {
                    "name": "stateTracking",
                    "args": "status"
                },
                {
                    "name": "atLeastOneNotNull",
                    "args": [
                        "email",
                        "mobile"
                    ]
                }
            ],
            "fields": {
                "email": {
                    "name": "email",
                    "type": "email"
                },
                "mobile": {
                    "name": "mobile",
                    "type": "phone",
                    "modifiers": [
                        {
                            "oolType": "Validator",
                            "name": "isMobilePhone",
                            "args": {
                                "oolType": "PipedValue",
                                "value": {
                                    "oolType": "ObjectReference",
                                    "name": "latest.locale"
                                },
                                "modifiers": [
                                    {
                                        "oolType": "Processor",
                                        "name": "stringDasherize"
                                    }
                                ]
                            }
                        },
                        {
                            "oolType": "Processor",
                            "name": "normalizeMobile"
                        }
                    ]
                },
                "password": {
                    "name": "password",
                    "type": "password",
                    "modifiers": [
                        {
                            "oolType": "Processor",
                            "name": "hashPassword",
                            "args": {
                                "oolType": "ObjectReference",
                                "name": "latest.passwordSalt"
                            }
                        },
                        {
                            "oolType": "Validator",
                            "name": "isHash"
                        }
                    ]
                },
                "passwordSalt": {
                    "name": "passwordSalt",
                    "type": "text",
                    "fixedLength": 32,
                    "auto": true,
                    "readOnly": true,
                    "fixedValue": true
                },
                "displayName": {
                    "name": "displayName",
                    "type": "text",
                    "maxLength": 40,
                    "optional": true
                },
                "locale": {
                    "name": "locale",
                    "type": "text",
                    "maxLength": 10,
                    "default": "en_AU"
                },
                "isEmailVerified": {
                    "name": "isEmailVerified",
                    "type": "bool",
                    "default": false
                },
                "isMobileVerified": {
                    "name": "isMobileVerified",
                    "type": "bool",
                    "default": false,
                    "comment": "Flag indicates mobile verified or not"
                },
                "status": {
                    "name": "status",
                    "type": "userStatus",
                    "default": "inactive"
                },
                "tag": {
                    "name": "tag",
                    "type": "array",
                    "valueType": "text",
                    "optional": true
                },
                "profile": {
                    "name": "profile",
                    "association": {
                        "type": "hasOne",
                        "target": "personalProfile"
                    }
                },
                "securityGroups": {
                    "name": "securityGroups",
                    "association": {
                        "type": "hasMany",
                        "target": "securityGroup"
                    }
                }
            },
            "indexes": [
                {
                    "fields": "email",
                    "unique": true
                },
                {
                    "fields": "mobile",
                    "unique": true
                }
            ]
        }
    }
}