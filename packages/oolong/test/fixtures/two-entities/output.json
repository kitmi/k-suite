{
    "type": {
        "password": {
            "type": "text",
            "maxLength": [
                200
            ]
        },
        "email": {
            "type": "text",
            "maxLength": [
                200
            ],
            "modifiers": [
                {
                    "oolType": "Validator",
                    "name": "isEmail"
                }
            ]
        },
        "phone": {
            "type": "text",
            "maxLength": [
                20
            ],
            "modifiers": [
                {
                    "oolType": "Validator",
                    "name": "matches",
                    "args": [
                        "/^((\\+|00)\\d+)?\\d+(-\\d+)?$/"
                    ]
                }
            ]
        },
        "userStatus": {
            "type": "enum",
            "values": [
                [
                    "inactive",
                    "active",
                    "disabled",
                    "forbidden",
                    "deleted"
                ]
            ]
        },
        "name": {
            "type": "text",
            "maxLength": [
                20
            ]
        }
    },
    "entity": {
        "user": {
            "comment": "User Credential",
            "features": [
                {
                    "name": "autoId",
                    "args": [
                        {
                            "startFrom": 100000
                        }
                    ]
                },
                "createTimestamp",
                "updateTimestamp",
                {
                    "name": "logicalDeletion",
                    "args": [
                        {
                            "status": "deleted"
                        }
                    ]
                },
                {
                    "name": "stateTracking",
                    "args": [
                        "status"
                    ]
                },
                {
                    "name": "atLeastOneNotNull",
                    "args": [
                        [
                            "email",
                            "mobile"
                        ]
                    ]
                }
            ],
            "fields": {
                "email": {
                    "name": "email",
                    "type": "email"
                },
                "mobile": {
                    "name": "mobile",
                    "type": "phone",
                    "modifiers": [
                        {
                            "oolType": "Validator",
                            "name": "isMobilePhone",
                            "args": [
                                {
                                    "oolType": "PipedValue",
                                    "value": {
                                        "oolType": "ObjectReference",
                                        "name": "latest.locale"
                                    },
                                    "modifiers": [
                                        {
                                            "oolType": "Processor",
                                            "name": "stringDasherize"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "oolType": "Processor",
                            "name": "normalizeMobile"
                        }
                    ]
                },
                "status": {
                    "name": "status",
                    "type": "userStatus",
                    "default": [
                        "inactive"
                    ]
                },
                "profile": {
                    "name": "profile",
                    "association": {
                        "type": "hasOne",
                        "entity": "personalProfile"
                    }
                },
                "securityGroups": {
                    "name": "securityGroups",
                    "association": {
                        "type": "hasMany",
                        "entity": "securityGroup"
                    }
                }
            },
            "indexes": [
                {
                    "fields": "email",
                    "unique": true
                },
                {
                    "fields": "mobile",
                    "unique": true
                }
            ]
        },
        "personalProfile": {
            "comment": "Personal Profile",
            "features": [
                "updateTimestamp"
            ],
            "fields": {
                "owner": {
                    "name": "owner",
                    "association": {
                        "type": "belongsTo",
                        "entity": "user"
                    }
                },
                "firstName": {
                    "name": "firstName",
                    "type": "name",
                    "optional": true
                },
                "middleName": {
                    "name": "middleName",
                    "type": "name",
                    "optional": true
                },
                "surName": {
                    "name": "surName",
                    "type": "name",
                    "optional": true
                },
                "gender": {
                    "name": "gender",
                    "association": {
                        "type": "hasOne",
                        "entity": "gender"
                    },
                    "optional": true
                },
                "title": {
                    "name": "title",
                    "association": {
                        "type": "hasOne",
                        "entity": "personTitle"
                    },
                    "optional": true
                },
                "dateOfBirth": {
                    "name": "dateOfBirth",
                    "type": "datetime",
                    "optional": true
                }
            }
        }
    }
}