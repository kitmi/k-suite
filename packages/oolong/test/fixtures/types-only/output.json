{
    "type": {
        "userStatus": {
            "type": "enum",
            "values": [
                [
                    "inactive",
                    "active",
                    "disabled",
                    "forbidden",
                    "deleted"
                ]
            ]
        },
        "name": {
            "type": "text",
            "maxLength": [
                40
            ]
        },
        "shortName": {
            "type": "text",
            "maxLength": [
                20
            ]
        },
        "flag": {
            "type": "bool",
            "default": [
                false
            ]
        },
        "id": {
            "type": "name",
            "modifiers": [
                {
                    "oolType": "Validator",
                    "name": "matches",
                    "args": [
                        "/^[A-Za-z_]\\w{2,39}$/"
                    ]
                }
            ]
        },
        "password": {
            "type": "text",
            "maxLength": [
                200
            ]
        },
        "email": {
            "type": "text",
            "maxLength": [
                200
            ],
            "modifiers": [
                {
                    "oolType": "Validator",
                    "name": "isEmail"
                }
            ]
        },
        "phone": {
            "type": "text",
            "maxLength": [
                20
            ],
            "modifiers": [
                {
                    "oolType": "Validator",
                    "name": "matches",
                    "args": [
                        "/^((\\+|00)\\d+)?\\d+(-\\d+)?$/"
                    ]
                }
            ]
        }
    }
}