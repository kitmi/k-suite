{
  "type": {
    "password": {
      "type": "text",
      "maxLength": [ 200 ]
    },
    "email": {
      "type": "text",
      "maxLength": [ 200 ],
      "modifiers": [{
        "oolType": "Validator",
        "name": "isEmail"
      }]
    },
    "phone": {
      "type": "text",
      "maxLength": [ 20 ],
      "modifiers": [{
        "oolType": "Validator",
        "name": "matches",
        "args": [ "/^((\\+|00)\\d+)?\\d+(-\\d+)?$/" ]
      }]
    },
    "userStatus": {
      "type": "enum",
      "values": [
        "inactive",
        "active",
        "disabled",
        "forbidden",
        "deleted"
      ]
    },
    "name": {
      "type": "text",
      "maxLength": [ 20 ]
    }
  },
  "entity": {
    "user": {
      "comment": "User Credential",
      "features": [
          {
              "name": "autoId",
              "args": [ {
                  "startFrom": 100000
              } ]
          },
          "createTimestamp",
          "updateTimestamp",
          {
              "name": "logicalDeletion",
              "args": [ {
                  "status": "deleted"
              } ]
          },
          {
              "name": "stateTracking",
              "args": [ "status" ]
          },
          {
              "name": "atLeastOneNotNull",
              "args": [ [
                  "email",
                  "mobile"
              ] ]
          }
      ],
      "fields": {
          "email": {
              "name": "email",
              "type": "email"
          },
          "mobile": {
              "name": "mobile",
              "type": "phone",
              "modifiers": [
                  {
                      "oolType": "Validator",
                      "name": "isMobilePhone",
                      "args": [ {
                          "oolType": "PipedValue",
                          "value": {
                              "oolType": "ObjectReference",
                              "name": "latest.locale"
                          },
                          "modifiers": [
                              {
                                  "oolType": "Processor",
                                  "name": "stringDasherize"
                              }
                          ]
                      } ]
                  },
                  {
                      "oolType": "Processor",
                      "name": "normalizeMobile"
                  }
              ]
          },
          "password": {
            "name": "password",
            "type": "password",
            "modifiers": [
                {
                    "oolType": "Processor",
                    "name": "hashPassword",
                    "args": [
                        {
                            "oolType": "ObjectReference",
                            "name": "latest.passwordSalt"
                        }
                    ]
                }
            ]
        },
        "passwordSalt": {
            "name": "passwordSalt",
            "type": "text",
            "fixedLength": [
                8
            ],
            "auto": true
        },
        "locale": {
            "name": "locale",
            "type": "text",
            "default": [
                "en_AU"
            ]
        },
          "status": {
              "name": "status",
              "type": "userStatus",
              "default": [ "inactive" ]
          }
      },
      "associations": [{
          "type": "hasMany",
          "entity": "profile"
        },
        {
          "type": "hasMany",
          "entity": "group",
          "through": "usergroup"
        }
      ],
      "indexes": [
          {
              "fields": "email",
              "unique": true
          },
          {
              "fields": "mobile",
              "unique": true
          }
      ]
    }
  }
}