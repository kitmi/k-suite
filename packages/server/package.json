{
  "name": "@k-suite/server",
  "version": "1.0.0",
  "description": "A modular web application framework based on koa.",
  "scripts": {
    "doc": "jsdoc -c jsdoc.json -t ./node_modules/ink-docstrap/template -R README.md -d './docs' -r --verbose ./src",
    "jison": "jison ./src/oolong/lang/grammar/oolong.jison -o ./src/oolong/lang/oolong.js",
    "test:only": "mocha test/*.mocha.js --timeout 5000",
    "test": "npm run build:test && npm run test:only",
    "test:smoke": "node test/smoke-test.js",
    "cover": "nyc --reporter=html --reporter=text mocha test/*.mocha.js --timeout 5000",
    "travis": "npm run build:travis && nyc --reporter=lcovonly mocha test/*.mocha.js --timeout 10000 && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "bulid:clean": "rm -rf lib",
    "build": "npm run bulid:clean && NODE_ENV=development babel src -d lib --copy-files",
    "build:prod": "npm run bulid:clean && NODE_ENV=production babel src -d lib --copy-files",
    "build:test": "npm run bulid:clean && NODE_ENV=test babel src -d lib --copy-files",
    "build:travis": "npm run bulid:clean && NODE_ENV=production babel src -d lib --copy-files && node test/prepare-for-test travis",
    "build:watch": "NODE_ENV=development babel src -w -d lib --copy-files"
  },
  "keywords": [
    "web",
    "builder",
    "modular",
    "framework",
    "koa"
  ],
  "repository": "https://github.com/kitmi/k-suite/tree/master/packages/server",
  "bugs": {
    "url": "https://github.com/kitmi/k-suite/issues"
  },
  "author": "Rockie Guo <rockie@kitmi.com.au>",
  "license": "MIT",
  "nyc": {
    "exclude": [
      "babel.config.js",
      "test"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "babel-plugin-contract": "^1.3.0",
    "coveralls": "^3.0.0",
    "fast-file-rotate": "github:kitmi/fast-file-rotate",
    "ink-docstrap": "^1.3.2",
    "jison": "^0.4.18",
    "jsdoc": "^3.5.5",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "shelljs": "^0.8.2",
    "should": "^13.2.3",
    "supertest": "^3.3.0"
  },
  "dependencies": {
    "@k-suite/cli-app": "^0.0.1-alpha.1",
    "http-status-codes": "^1.3.0",
    "hyperid": "^1.4.1",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^2.0.0",
    "koa-connect": "^2.0.1",
    "koa-csrf": "^3.0.6",
    "koa-error": "^3.2.0",
    "koa-etag": "^3.0.0",
    "koa-flash-message": "^0.1.6",
    "koa-methodoverride": "^2.0.0",
    "koa-mount": "^3.0.0",
    "koa-passport": "^4.0.1",
    "koa-router": "^7.3.0",
    "koa-session-memory": "^1.0.2",
    "koa-session-mowa": "^5.9.1",
    "koa-static": "^4.0.2",
    "koa-views": "^6.1.3",
    "luxon": "^1.4.3",
    "number-to-letter": "^1.0.1",
    "pluralize": "^7.0.0",
    "randomstring": "^1.1.5",
    "rk-config": "^1.1.1",
    "rk-utils": "^2.1.6",
    "socket.io": "^2.1.1",
    "swig-templates": "^2.0.3",
    "tiny-xml": "^1.0.6",
    "uniqid": "^5.0.3",
    "uuid": "^3.3.2",
    "validator": "^9.4.1"
  },
  "main": "index",
  "engines": {
    "node": "8.11.4"
  }
}
